<form class="products__form">
    <label class="products__label" for="title">Nome do Produto:</label>
    {{input class="products__entry" name="title" id="title" type="text" placeholder="Nome do Produto" value=model.title}}
    <label class="products__label" for="price">Valor do produto:</label>    
    {{input class="products__entry" name="price" id="price" type="text" placeholder="Valor do Produto" value=model.price}}
    <label class="products__label" for="weight">Quantidade em Kg:</label>        
    {{input class="products__entry" name="weight" id="weight" type="text" placeholder="Quantidade em Kg" value=model.instock}}
    <button class="products__submit" {{action 'save' model}}>Salvar</button>
</form>